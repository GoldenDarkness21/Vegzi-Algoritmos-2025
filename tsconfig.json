{
  "compilerOptions": {
    "target": "ESNext",                          
    "module": "CommonJS",                                                      
    "strict": true,                           
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,  
    "outDir": "./dist",    
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
               
                       
  },
  "include": ["src/**/*"],                         
  "exclude": ["node_modules", "dist"]         
}
